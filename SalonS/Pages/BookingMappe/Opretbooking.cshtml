@page
@model BookingModel

<h2>Book an Appointment</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="error-message" style="color:red;">
        @Model.ErrorMessage
    </div>
}

<form method="post">
    <div>
        <label for="service">Choose a Service:</label>
        <select id="service" name="NewBooking.Klip">
            <option value="Klipning med skæg">Klipning med skæg</option>
            <option value="Klipning uden skæg">Klipning uden skæg</option>
        </select>
    </div>

    <div>
        <label for="frisør">Choose Barber:</label>
        <select id="frisør" name="NewBooking.Frisør">
            <option value="Ali the Barber">Ali the Barber</option>
            <option value="Dani the Barber">Dani the Barber</option>
        </select>
    </div>

    <div>
        <label for="date">Date:</label>
        <input type="date" id="date" name="NewBooking.Dato" required>
    </div>

    <div>
        <label for="time">Time:</label>
        <select id="time" name="NewBooking.Tid">
            <option value="11:00">11:00</option>
            <option value="12:00">12:00</option>
            <option value="13:00">13:00</option>
            <option value="14:00">14:00</option>
            <option value="15:00">15:00</option>
            <option value="16:00">16:00</option>
            <option value="17:00">17:00</option>
        </select>
    </div>

    <div>
        <input type="hidden" name="NewBooking.Pris" value="300">
        <label>Price: 300</label>
    </div>

    <div>
        <input type="submit" value="Book Now">
    </div>
</form>