    @if (Model.Booking != null)
    {
        <div>
            <p><strong>Booking ID:</strong> @Model.Booking.BookingId</p>
            <p><strong>Date:</strong> @Model.Booking.Dato.ToString("yyyy-MM-dd")</p>
            <p><strong>Time:</strong> @Model.Booking.Tid</p>
            <p><strong>Service:</strong> @Model.Booking.Klip</p>
            <p><strong>Barber:</strong> @Model.Booking.Fris√∏r</p>
            <!-- Include any other relevant booking details here -->
        </div>
    }
    else
    {
        <p>Sorry, we couldn't find your booking.</p>
    }
</body>
</html>
