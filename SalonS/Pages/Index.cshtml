@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Barbershop</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="#about">About</a></li>
                <li><a href="#services">Services</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
        </nav>
    </header>

    <section id="hero">
        <h1>Welcome to XYZ Barbershop</h1>
        <p>Your go-to destination for top-notch grooming services.</p>
    </section>

    <section id="about">
        <div class="container">
            <div class="about-info">
                <h2>About Our Barber</h2>
                <p>Meet our skilled barber, John Doe. With over 10 years of experience, John is dedicated to providing the best grooming services for our clients. He specializes in modern and classic hairstyles.</p>
            </div>
            <div class="barber-image">
                <!-- Insert an image of the barber here -->
            </div>
        </div>
    </section>

    <section id="services">
        <div class="container">
            <h2>Our Services</h2>
            <div class="service-card">
                <img src="service1.jpg" alt="Service 1">
                <h3>Haircuts</h3>
                <p>Choose from a variety of haircut styles to suit your preferences.</p>
            </div>
            <div class="service-card">
                <img src="service2.jpg" alt="Service 2">
                <h3>Beard Trimming</h3>
                <p>Get your beard looking sharp and well-groomed.</p>
            </div>
            <!-- Add more service cards as needed -->
        </div>
    </section>

    <section id="map">
        <!-- Embed a map using Google Maps API or other mapping services -->
    </section>

    <section id="opening-hours">
        <div class="container">
            <h2>Opening Hours</h2>
            <table>
                <tr>
                    <td>Monday</td>
                    <td>9:00 AM - 6:00 PM</td>
                </tr>
                <tr>
                    <td>Tuesday</td>
                    <td>9:00 AM - 6:00 PM</td>
                </tr>
                <!-- Add more days and hours as needed -->
            </table>
        </div>
    </section>

    <section id="contact">
        <div class="container">
            <h2>Contact Us</h2>
            <p>If you have any questions or want to book an appointment, please don't hesitate to contact us.</p>
            <p>Email: contact@xyzbarbershop.com</p>
            <p>Phone: (123) 456-7890</p>
        </div>
    </section>

    <footer>
        <div class="container">
            <p>&copy; 2023 XYZ Barbershop</p>
        </div>
    </footer>

    <!-- Add your JavaScript for interactivity if needed -->

</body>
</html>
